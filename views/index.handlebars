<h1>Eat-Da-Burger!</h1>

<h2>Burgers AVAILABLE!</h2>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers DEVOURED!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Add My Burger!</label><br>
    <input type="radio" name="sleepy" value="0"> Make It Now!
  </div>

  <button type="submit">Add Burger!</button>
</form>
